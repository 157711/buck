export_file(
  name = 'primary-Info.plist',
  visibility = ['PUBLIC'],
)

apple_library(
  name = 'main',
  srcs = glob(['*.c']),
  deps = [
    'secondary//:applelib'
  ],
  visibility = ['PUBLIC'],
)

apple_bundle(
  name = 'applebundle',
  binary = ':main#shared',
  extension = 'framework',
  info_plist = '//:primary-Info.plist',
)

apple_bundle(
  name = 'applebundle_with_cross_cell_plist',
  binary = ':main#shared',
  extension = 'framework',
  info_plist = 'secondary//:secondary-Info.plist',
)
