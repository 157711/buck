java_library(
    name = "testutil",
    srcs = glob(
        ["*.java"],
        excludes = [
            "*Test.java",
            "*Builder.java",
        ],
    ),
    autodeps = True,
    exported_deps = [
        "//src/com/facebook/buck/model:model",
        "//src/com/facebook/buck/python:support",
    ],
    visibility = [
        "//test/...",
    ],
)

